{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@types": ["src/types"],
      "@utils": ["src/cli/utils/index"],
      "@tools": ["src/tools/index"],
      "@langchain/*": ["src/langchain/*"],
      "@agents": ["src/agents/index"]
    },
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
